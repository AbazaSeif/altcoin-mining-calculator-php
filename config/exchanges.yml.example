Hirocoin:
    Poloniex:
        base_url: https://poloniex.com
        uri: public
        get_params:
            command: returnTicker
        json_key: BTC_HIRO.last
    Mintpal:
        base_url: https://api.mintpal.com/market/stats
        uri: HIRO/BTC
        json_key: 0.last_price
    Bittrex:
        base_url: https://bittrex.com/api/v1/public
        uri: getticker
        get_params:
            market: BTC-HIRO
        json_key: result.Bid
    Allcoin:
        base_url: https://www.allcoin.com/api1
        uri: pair/hic_btc
        json_key: data.trade_price
